use alienfile;

plugin 'PkgConfig' => (
  pkg_name => 'openssl',
);
 
share {

  start_url 'https://www.openssl.org/source/';
  plugin Download => (
    version       => qr/^openssl-([0-9\.]+[a-z]*)\.tar\.gz$/,
    bootstrap_ssl => 1,
  );
  
  plugin 'Extract' => 'tar.gz';

  build [
    '%{perl} Configure --prefix=%{.install.prefix} no-shared cc',
    '%{make}',
    '%{make} install',
  ];

};
